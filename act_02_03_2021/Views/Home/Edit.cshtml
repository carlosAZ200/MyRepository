@model act_02_03_2021.Models.Datos

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link rel=StyleSheet href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <h4>Datos</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    <p>
                        Correo:
                        @*@Html.TextBox("Correo")*@
                        @Html.TextBoxFor(model => model.Correo)
                    </p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <p>
                        Nombre del usuario:
                        @*@Html.Display("NombreUsuario")*@
                        @Html.DisplayFor(model => model.NombreUsuario)
                        @*@Html.Hidden("NombreUsuario")*@
                        @Html.HiddenFor(model => model.NombreUsuario)
                    </p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <p>
                        Clave:
                        @*@Html.TextBox("Clave")*@
                        @Html.TextBoxFor(model => model.Clave)
                    </p>
                </div>
            </div>

            <div class="form-group">
